<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/style.css" />
    <title>Task List</title>
  </head>
  <body>
    <section class="todos">
      <div class="todos__main-content">
        <h1 class="todos__header"><%= title %></h1>
        
        <button class="todos__add-btn">+ Add Todo</button>
        
        <!-- Form -->
        <form class="todos__form" action="/" method="POST">
          <input
            type="text"
            class="input"
            name="todo"
            placeholder="write a todo..."
          />
          <input type="submit" value="Submit" />
        </form>
  
        <div class="todos__all-todos">
          <p class="nothing">No Todos...</p>
          <ul>
            <li class="todos__each-todo">
              <input type="checkbox" class="todos__each-checkbox" id="todo" name="todo">
              <label for="todo">Lorem ipsum dolor sit amet consectetur adipisicing elit. Perferendis quae non nulla.</label>
              <button class="todos__each-remove-btn">remove</button>
            </li>
          </ul>
        </div>
        <div>
          <%= todos %>
        </div>
        <!-- all the todos -->
      </div>
    </section>

    <script>
      // catching the elements
      const addBtn = document.querySelector(".todos__add-btn");
      const form = document.querySelector(".todos__form");

      // default changes
      form.style.display = "none";

      // make changes
      addBtn.addEventListener("click", ()=>{
        form.style.display = "block";
        addBtn.style.display = "initial";
      })

    </script>
  </body>
</html>
